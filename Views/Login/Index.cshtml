@model LoginModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btnav btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">    
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <div class="d-grid gap-2 d-nd-flex justify-content-md-center " id="entrar">
    <button type="submit" class="btn btn-primary"id="entrar">Entrar</button>
    </div>
</form> 
<div class="d-grid gap-2 d-nd-flex justify-content-md-center " id="registrar">
    <a href="@Url.Action("Criar","Usuario")" class="btn btn-primary" role="button">Registrar-se</a>
</div>